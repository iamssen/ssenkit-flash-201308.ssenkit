<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009">

	<fx:Metadata>
		<![CDATA[ 
			[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>

	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<!-- hit -->
	<s:Rect left="0" top="0" right="0" bottom="0" minWidth="14" minHeight="14">
		<s:fill>
			<s:SolidColor color="0x000000" alpha="0"/>
		</s:fill>
	</s:Rect>

	<!-- display -->
	<s:Rect left="4" top="2" right="4" bottom="2">
		<s:fill>
			<s:SolidColor color="0x000000" alpha="0.1" alpha.over="0.2" alpha.down="0.5"/>
		</s:fill>
	</s:Rect>

</s:SparkSkin>